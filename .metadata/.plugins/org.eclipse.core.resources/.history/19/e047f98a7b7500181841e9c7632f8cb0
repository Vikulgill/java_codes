package UsingFuncArray;
import java.util.Scanner;

public class sortBinaryArray {
	
	public static void sortBinaryArray(int[] arr){
		int size=arr.length;
      int val1=0;
      int val2=size-1;
       for (int i=0;i<size;i++)   {
        if  (arr[i]==0)  {
          arr[val1]=0;
          val1++;
        }
       }
        for (int i=0;i<size;i++){
        if (arr[i]==1) {
        	arr[val2]=1;
        	val2--;
        }
        }
       }
  

	

	public static void main(String[] args) {
	
		int arr[]= {1,0,0,1,0};
		sortBinaryArray(arr);
		for (int i=0;i<5;i++)  {
			System.out.print(arr[i]+" ");
		}

	}

}
